#tag Events UpdateTimer
	#tag Event
		Sub Action()
		  MainWindow.List.DeleteAllRows
		  
		  dim items() as MDItemMBS = q.Results
		  for each it as MDItemMBS in items
		    AddItem it
		  next
		  
		  Title = str(UBound(items)+1)+" items"
		End Sub
	#tag EndEvent
