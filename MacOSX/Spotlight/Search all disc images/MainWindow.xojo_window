#tag WindowCode
	#tag Event
		Sub Close()
		  if q<>nil then
		    q.stop
		    q=nil
		  end if
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  
		  q=new MyQuery("(kMDItemFSName == ""*.dmg""c) || (kMDItemFSName == ""*.iso""c) || (kMDItemFSName == ""*.partimg""c) || (kMDItemFSName == ""*.wim""c)")
		  
		  if q.Handle=0 then
		    MsgBox "Failed to create query"
		  else
		    
		    if q.Execute(q.kMDQueryWantsUpdates) then
		      'ok
		      q.EnableUpdates
		    else
		      MsgBox "Failed to run query"
		    end if
		    
		  end if
		  
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h0
		Sub Additem(it as MDItemMBS)
		  
		  dim file as FolderItem = GetFolderItem(it.Path, folderitem.PathTypeShell)
		  
		  List.AddRow file.DisplayName
		  List.RowPicture(list.LastIndex)=file.IconMBS(16)
		  
		  Exception e
		    
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h0
		q As MyQuery
	#tag EndProperty


#tag EndWindowCode

