#tag Events Canvas1
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  
		  
		  
		  dim time as integer =ticks
		  
		  dim CGContextHandle as integer =g.Handle(g.HandleTypeCGContextRef)
		  dim cgContext as CGContextMBS = CGContextMBS.contextWithCGContext(CGContextHandle)
		  dim cicontext as new CIContextMBS(cgContext)
		  
		  cifilter.inputBrightness=SliderB.Value/100.0
		  CIFilter.inputContrast=SliderC.Value/100.0
		  CIFilter.inputSaturation=SliderS.Value/100.0
		  
		  dim result as CIImageMBS = cifilter.outputImage
		  
		  if result<>nil then
		    cicontext.drawImageRect result, result.Extent,result.Extent
		  end if
		  
		  System.DebugLog "Paint needed "+str((ticks-time)/60.0)+" seconds."
		  
		End Sub
	#tag EndEvent
#tag EndEvents
