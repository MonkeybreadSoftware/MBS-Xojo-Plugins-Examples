#tag Class
Protected Class int_only
Inherits TextField
	#tag Event
		Sub TextChange()
		  dim i,e as integer
		  dim s,c,m as string
		  dim use as boolean
		  if not use then
		    use=true
		    sel_pos=me.selstart
		    m=one_minus(me.text)
		    e=len(m)
		    if e>0 then
		      s=""
		      for i=1 to e
		        c=mid(m,i,1)
		        if is_number(c) then
		          s=s+c
		        end if
		      next
		    end if
		    me.text=s
		    me.selstart=sel_pos
		    use=false
		  end if
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h1
		Protected Function is_number(c as string) As boolean
		  return instr("0123456789-",left(c,1))<>0
		End Function
	#tag EndMethod

	#tag Method, Flags = &h1
		Protected Function one_minus(inp as string) As string
		  dim m as string
		  m=left(inp,1)
		  return m+replaceall( right(inp,len(inp)-1),"-","" )
		End Function
	#tag EndMethod


	#tag Property, Flags = &h1
		Protected sel_pos As integer
	#tag EndProperty


