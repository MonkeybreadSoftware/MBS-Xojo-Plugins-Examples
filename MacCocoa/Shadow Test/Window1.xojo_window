#tag Events PushButton1
	#tag Event
		Sub Action()
		  dim n as NSTextViewMBS = TextArea1.NSTextViewMBS
		  
		  dim s as new NSShadowMBS
		  
		  s.shadowColor = nscolormbs.redColor
		  s.shadowOffset = new NSSizeMBS(5, 5)
		  s.shadowBlurRadius = 5
		  
		  dim t as NSTextStorageMBS = n.textStorage
		  
		  t.addAttribute(t.NSShadowAttributeName, s, NSMakeRangeMBS(0, t.Length))
		  
		End Sub
	#tag EndEvent
